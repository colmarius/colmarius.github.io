---
type Props = {
  href: string;
  label?: string;
  class?: string;
};

const { href, label = 'Back', class: className = '' } = Astro.props;
---

<a
  href={href}
  class={`inline-flex items-center text-sm text-gray-500 hover:text-gray-700 transition-colors group focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-600/50 focus-visible:ring-offset-2 rounded-sm ${className}`}
>
  <svg
    class="w-4 h-4 mr-1 transform group-hover:-translate-x-1 transition-transform"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
  </svg>
  {label}
</a>
