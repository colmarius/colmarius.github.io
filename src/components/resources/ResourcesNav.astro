---
type ActiveSection = 'newsletters' | 'books' | 'coding-with-agents';

type Props = {
  active?: ActiveSection;
};

const { active } = Astro.props;
---

<nav class="mb-10">
  <a
    href="/resources"
    class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700 mb-6 transition-colors group"
  >
    <svg
      class="w-4 h-4 mr-1 transform group-hover:-translate-x-1 transition-transform"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
    </svg>
    Back to Resources
  </a>
  <div class="flex flex-wrap gap-2">
    <a
      href="/resources/coding-with-agents"
      class={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
        active === 'coding-with-agents'
          ? 'bg-gray-900 text-white shadow-sm'
          : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-gray-400'
      }`}
    >
      Coding with Agents
    </a>
    <a
      href="/resources/newsletters"
      class={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
        active === 'newsletters'
          ? 'bg-gray-900 text-white shadow-sm'
          : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-gray-400'
      }`}
    >
      Newsletters
    </a>
    <a
      href="/resources/books"
      class={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
        active === 'books'
          ? 'bg-gray-900 text-white shadow-sm'
          : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-gray-400'
      }`}
    >
      Books
    </a>
  </div>
</nav>
