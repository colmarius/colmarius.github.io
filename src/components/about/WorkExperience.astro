---

<section class="mb-20">
  <h2 class="text-2xl font-medium mb-12">Work Experience</h2>

  {workExperience.map((item) => (
    <div class="mb-8 leading-relaxed">
      <p class="text-gray-600 mb-2">{item.period}</p>
      <p class="text-medium font-bold mb-1">{item.title}</p>
      <a href={item.url} target="_blank" rel="noreferrer" class="text-indigo-600 hover:text-indigo-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-600/50 focus-visible:ring-offset-2 rounded-sm">
        {item.company}
      </a>
    </div>
  ))}
</section>
