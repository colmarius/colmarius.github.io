<section class="mb-20">
  <h2 class="text-2xl font-medium mb-8">Work Experience</h2>

  {workExperience.map((item) => (
    <div class="mb-6">
      <p>{item.period}</p>
      <p class="text-medium font-bold">{item.title}</p>
      <a href={item.url} target="_blank" rel="noreferrer" class="text-indigo-600 hover:text-indigo-500">
        {item.company}
      </a>
    </div>
  ))}
</section>
