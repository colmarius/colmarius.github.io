  period: string;
  title: string;
  company: string;
  url: string;
};

const workExperience: WorkItem[] = [
  {
    period: '2023 - Present',
    title: 'Founder and Head of Engineering',
    company: 'Norm',
    url: 'https://norm.ch/',
  },
  {
    period: '2019 - 2023',
    title: 'Engineering Leader',
    company: 'Ledgy',
    url: 'https://ledgy.com/',
  },
  {
    period: '2018 - 2019',
    title: 'Full Stack Engineer',
    company: 'On',
    url: 'https://www.on.com/',
  },
  {
    period: '2016 - 2018',
    title: 'Engineering Team Lead',
    company: 'XING',
    url: 'https://www.xing.com/',
  },
  {
    period: '2015 - 2016',
    title: 'Lead Software Engineer',
    company: 'BuddyBroker',
