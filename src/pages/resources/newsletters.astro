---
import Layout from '../../layouts/Layout.astro';
import ResourcesNav from '../../components/resources/ResourcesNav.astro';
import NewslettersList from '../../components/resources/Newsletters';
---

<Layout title="Marius Colacioiu – Resources – Newsletters">
  <div class="max-w-4xl mx-auto px-6 py-16">
    <ResourcesNav active="newsletters" />
    
    <h1 class="text-3xl md:text-4xl font-light mb-4 text-gray-900">
      Newsletters
    </h1>
    <p class="text-lg text-gray-600 mb-12 font-light leading-relaxed">
      Weekly and monthly newsletters that keep me informed about tech, AI, and thoughtful perspectives on software engineering.
    </p>

    <NewslettersList client:load />
  </div>
</Layout>
